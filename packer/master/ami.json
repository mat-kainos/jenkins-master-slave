{
    "variables" : {
        "region" : "eu-west-1",
        "source_ami" : "ami-0ff760d16d9497662"
    },
    "builders" : [
        {
            "type" : "amazon-ebs",
            "profile" : "default",
            "region" : "{{user `region`}}",
            "instance_type" : "t2.micro",
            "source_ami" : "{{user `source_ami`}}",
            "ssh_username" : "centos",
            "ami_name" : "jenkins-master-poc",
            "ami_description" : "Amazon Linux Image with Jenkins Server",
            "run_tags" : {
                "Name" : "packer-builder-docker"
            },
            "tags" : {
                "Tool" : "Packer"
            }
        }
    ],
    "provisioners" : [
        {
            "type" : "file",
            "source" : "./setup.sh",
            "destination" : "./setup.sh"
        },
        {
            "type" : "file",
            "source" : "./security.groovy",
            "destination" : "/tmp/security.groovy"
        },
        {
            "type" : "file",
            "source" : "./install-plugins.sh",
            "destination" : "/tmp/install-plugins.sh"
        },
        {
            "type" : "file",
            "source" : "./pwd.sensitive",
            "destination" : "/tmp/pwd.sensitive"
        },
        {
            "type" : "file",
            "source" : "./user.sensitive",
            "destination" : "/tmp/user.sensitive"
        },
        {
            "type" : "shell",
            "script" : "./setup.sh",
            "execute_command" : "sudo -E -S sh '{{ .Path }}'"
        }

    ]
}

