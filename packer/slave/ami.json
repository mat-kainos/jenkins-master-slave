{
    "variables" : {
        "region" : "eu-west-1",
        "source_ami" : "ami-0ff760d16d9497662"
    },
    "builders" : [
        {
            "type" : "amazon-ebs",
            "profile" : "default",
            "region" : "{{user `region`}}",
            "instance_type" : "t2.micro",
            "source_ami" : "{{user `source_ami`}}",
            "ssh_username" : "centos",
            "ami_name" : "jenkins-slave-poc",
            "ami_description" : "Amazon Linux Image with Jenkins Slave POC",
            "run_tags" : {
                "Name" : "packer-builder-docker"
            },
            "tags" : {
                "Tool" : "Packer"
            }
        }
    ],
    "provisioners" : [
        {
            "type" : "file",
            "source" : "./setup.sh",
            "destination" : "./setup.sh"
        },
        {
            "type" : "file",
            "source" : "./swarm-client-3.17.jar",
            "destination" : "/home/centos/swarm-client-3.17.jar"
        },
        {
            "type" : "file",
            "source" : "../jenkins_admin/pwd.sensitive",
            "destination" : "/home/centos/pwd.sensitive"
        },
        {
            "type" : "file",
            "source" : "../jenkins_admin/user.sensitive",
            "destination" : "/home/centos/user.sensitive"
        },
        {
            "type" : "file",
            "source" : "./jenkins-slave-exec.sh",
            "destination" : "/home/centos/jenkins-slave-exec.sh"
        },
        {
            "type" : "file",
            "source" : "./jenkins-slave.sh",
            "destination" : "/home/centos/jenkins-slave.sh"
        },
        {
            "type" : "file",
            "source" : "./jenkins-slave.service",
            "destination" : "/home/centos/jenkins-slave.service"
        },
        {
            "type" : "shell",
            "inline" : "sudo -E -S mv /home/centos/jenkins-slave.service /etc/systemd/system/jenkins-slave.service"
            
        },
        {
            "type" : "shell",
            "script" : "./setup.sh",
            "execute_command" : "sudo -E -S sh '{{ .Path }}'"
        }
    ]
}