{
    "variables" : {
        "region" : "eu-west-1",
        "source_ami" : "ami-0ff760d16d9497662"
    },
    "builders" : [
        {
            "type" : "amazon-ebs",
            "profile" : "default",
            "region" : "{{user `region`}}",
            "instance_type" : "t2.micro",
            "source_ami" : "{{user `source_ami`}}",
            "ssh_username" : "centos",
            "ami_name" : "jenkins-slave-poc",
            "ami_description" : "Amazon Linux Image with Jenkins Slave POC",
            "run_tags" : {
                "Name" : "packer-builder-docker"
            },
            "tags" : {
                "Tool" : "Packer"
            }
        }
    ],
    "provisioners" : [
        {
            "type" : "file",
            "source" : "./setup.sh",
            "destination" : "./setup.sh"
        },
        {
            "type" : "shell",
            "script" : "./setup.sh",
            "execute_command" : "sudo -E -S sh '{{ .Path }}'"
        },
        {
            "type" : "file",
            "source" : "../keys/id_rsa",
            "destination" : "/home/centos/id_rsa_jenkins"
        }
    ]
}